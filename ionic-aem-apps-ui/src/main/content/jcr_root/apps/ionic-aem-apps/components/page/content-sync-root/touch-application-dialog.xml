<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Content Sync"
          sling:resourceType="granite/ui/components/foundation/section">
    <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"/>
    <items jcr:primaryType="nt:unstructured">
        <column jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <applicationRootPath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                        fieldLabel="Application Root Path"
                        fieldDescription="The path to the application root that is redirected to after content sync completes."
                        name="./applicationRootPath"
                        rootPath="/content" />
                <autoCloseSplashScreen
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/switch"
                        fieldLabel="Close Splash Screen"
                        fieldDescription="Indicates that the splash screen should be closed automatically and not left to the application root to close it."
                        name="./autoCloseSplashScreen"
                        onText="Yes"
                        offText="No"
                        rootPath="/content" />
            </items>
        </column>
    </items>
</jcr:root>